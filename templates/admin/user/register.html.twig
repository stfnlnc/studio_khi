{% extends 'admin/base.html.twig' %}

{% block title %}Utilisateurs - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container__large border--bottom border-stroke-light">
        <div class="container">
            <h1>Ajouter un utilisateur</h1>
        </div>
    </div>
    <div id="form" class="container flex row col-mobile gap--8 align--start justify--start">
        {{ form_start(form, {'attr': {'class': 'w--100 flex col gap--8'}}) }}
        <div class="grid grid--2 grid--1-mobile grid-gap--4 w--100">
            <div class="flex col gap--1">
                {{ form_label(form.lastname) }}
                {{ form_widget(form.lastname) }}
                <div class="errors">
                    {{ form_errors(form.lastname) }}
                </div>
            </div>
            <div class="flex col gap--1">
                {{ form_label(form.firstname) }}
                {{ form_widget(form.firstname) }}
                <div class="errors">
                    {{ form_errors(form.firstname) }}
                </div>
            </div>
            <div class="flex col gap--1">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                <div class="errors">
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="flex col gap--1">
                {{ form_label(form.phone) }}
                {{ form_widget(form.phone) }}
                <div class="errors">
                    {{ form_errors(form.phone) }}
                </div>
            </div>
            <div class="flex col gap--1">
                {{ form_label(form.plainPassword) }}
                {{ form_widget(form.plainPassword) }}
                <div class="errors">
                    {{ form_errors(form.plainPassword) }}
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn__dark">
            Enregistrer
            <svg class="btn__icon" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
                <path d="M4.5 13.5L13.5 4.5" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M6.1875 4.5H13.5V11.8125" stroke-width="1.5" stroke-linecap="round"
                      stroke-linejoin="round"/>
            </svg>
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
