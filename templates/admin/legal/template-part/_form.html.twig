<div id="form" class="container flex row col-mobile gap--8 align--start justify--start">
    {{ form_start(form, {'attr': {'class': 'w--100 flex col gap--8'}}) }}
    <div class="w--100">
        <div class="flex col gap--8">
            <div class="flex col gap--1">
                {{ form_label(form.legal_notice) }}
                {{ form_widget(form.legal_notice) }}
                <div class="errors">
                    {{ form_errors(form.legal_notice) }}
                </div>
            </div>
            <div class="flex col gap--1">
                {{ form_label(form.privacy_policy) }}
                {{ form_widget(form.privacy_policy) }}
                <div class="errors">
                    {{ form_errors(form.privacy_policy) }}
                </div>
            </div>
            <div class="flex col gap--1">
                {{ form_label(form.cookies) }}
                {{ form_widget(form.cookies) }}
                <div class="errors">
                    {{ form_errors(form.cookies) }}
                </div>
            </div>
        </div>

    </div>
    {{ form_widget(form.save) }}
    {{ form_end(form) }}
</div>
<div class="container__large secondary-beige--bg">
    <div class="container flex col align--center justify--center gap--11 text-center">
        <button-react data-href="{{ path('app_admin_index') }}" data-content="Retour"></button-react>
    </div>
</div>